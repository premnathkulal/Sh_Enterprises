<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:orientation="vertical"
tools:context=".categories">

<ScrollView
    android:id="@+id/Notes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="74dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="8dp"
            android:text="Categories under Food and Beverages"
            android:gravity="center"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="114dp" />

        <android.support.v7.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="656dp"
            android:layout_marginBottom="8dp"
            android:numColumns="3"
            app:columnCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center">


            <android.support.v7.widget.CardView
                android:id="@+id/Biscuit"
                android:layout_width="125dp"
                android:layout_height="140dp"
                android:text="Biscuit">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="83dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/bisc" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:text="Biscuit" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/Candy"
                android:layout_width="125dp"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="93dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/candy" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:text="Candy" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/Bubble"
                android:layout_width="125dp"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="94dp"
                    android:layout_height="84dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/chiwi" />

                <TextView
                    android:id="@+id/textView03"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:text="Bubble Gum" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/Chips"
                android:layout_width="125dp"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="90dp"
                    android:layout_height="73dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/chip" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:text="Chips" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/Chocolate"
                android:layout_width="125dp"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="91dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/choc" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:text="Chocolate" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/Cofee"
                android:layout_width="125dp"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="94dp"
                    android:layout_height="83dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/cofee" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:text="Cofee" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/Fruit_Juce"
                android:layout_width="125dp"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="88dp"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/juce" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:text="Fruit Juce" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/Ghee"
                android:layout_width="125dp"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="88dp"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ghee" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:text="Ghee" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/Ground_Spice_Powder"
                android:layout_width="125dp"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:text="Ground Spice Powder" />


            </android.support.v7.widget.CardView>

        </android.support.v7.widget.GridLayout>

    </LinearLayout>

</ScrollView>


</LinearLayout>